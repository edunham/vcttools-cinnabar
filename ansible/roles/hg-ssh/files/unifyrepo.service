[Unit]
Description=Aggregate Mercurial repositories
After=network.target remote-fs.target nss-lookup.target

[Service]
WorkingDirectory=/
User=hg-aggregate
Group=hg-aggregate
Nice=15
UMask=002
EnvironmentFile=/etc/sysconfig/unifyrepo
ExecStart=/var/hg/venv_tools/bin/python /repo/hg/version-control-tools/hgext/unifyrepo/unify-daemon.py /var/hg/venv_tools/bin/hg $CONFIGS
Restart=always
SyslogIdentifier=unifyrepo
SyslogFacility=local2
PrivateTmp=true

[Install]
WantedBy=multi-user.target
